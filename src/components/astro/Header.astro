---
// Header component - Static Astro component
// Navigation links and branding with auth state

import { AuthHeader } from "@/components/auth/AuthHeader";

interface Props {
  user?: {
    id: string;
    email: string;
    name: string;
    displayName: string | null;
    avatarUrl: string | null;
  } | null;
  csrfToken?: string | null;
}

const { user = null, csrfToken = null } = Astro.props;
const currentPath = Astro.url.pathname;
const isBonsaiPage =
  currentPath === "/bonsai" || currentPath.startsWith("/bonsai/");
const isLandingPage = currentPath === "/";
---

<header class="sticky top-0 z-50 border-b border-border bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
  <div class="container-app">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo / Brand -->
      <a href="/" class="flex items-center gap-2 font-serif text-xl font-semibold text-primary transition-colors hover:text-primary/80">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="h-6 w-6"
          aria-hidden="true"
        >
          <path d="M12 22v-7" />
          <path d="M12 15c-3.5 0-7-3-7-7a7 7 0 0 1 14 0c0 4-3.5 7-7 7Z" />
          <path d="M12 8a2 2 0 0 0 0-4 2 2 0 0 0 0 4Z" />
        </svg>
        <span>Bonsai-Cho</span>
      </a>

      <!-- Navigation -->
      <nav class="hidden items-center gap-2 md:flex" aria-label="メインナビゲーション">
        <a
          href="/bonsai"
          class:list={[
            "inline-flex items-center rounded-md px-3 py-1.5 text-sm font-medium transition-colors hover:bg-muted hover:text-foreground",
            isBonsaiPage ? "bg-muted text-foreground" : "text-[color:var(--color-muted-foreground-accessible)]"
          ]}
          aria-current={isBonsaiPage ? 'page' : undefined}
        >
          盆栽一覧
        </a>
        {user && !isLandingPage && (
          <a
            href="/bonsai/new"
            class="inline-flex items-center gap-1.5 rounded-md bg-primary px-3 py-1.5 text-sm font-medium text-primary-foreground transition-colors hover:bg-primary/90"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="h-4 w-4"
              aria-hidden="true"
            >
              <path d="M5 12h14" />
              <path d="M12 5v14" />
            </svg>
            <span>盆栽を登録</span>
          </a>
        )}
      </nav>

      <!-- Actions -->
      <div class="flex items-center gap-4">
        <!-- Mobile menu button -->
        <button
          type="button"
          id="mobile-menu-button"
          class="inline-flex h-10 w-10 items-center justify-center rounded-md text-muted-foreground transition-colors hover:bg-muted hover:text-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring md:hidden"
          aria-label="メニューを開く"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-6 w-6"
            aria-hidden="true"
          >
            <line x1="4" x2="20" y1="12" y2="12" />
            <line x1="4" x2="20" y1="6" y2="6" />
            <line x1="4" x2="20" y1="18" y2="18" />
          </svg>
        </button>

        <!-- Auth state -->
        <AuthHeader
          client:load
          user={user}
          csrfToken={csrfToken || undefined}
          loginReturnTo={currentPath}
        />
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div
    id="mobile-menu"
    class="hidden border-t border-border bg-background md:hidden"
    aria-hidden="true"
  >
    <nav class="container-app py-4" aria-label="モバイルナビゲーション">
      <a
        href="/bonsai"
        class:list={[
          "block py-4 text-base font-medium transition-colors hover:text-foreground",
          isBonsaiPage ? "text-foreground" : "text-[color:var(--color-muted-foreground-accessible)]"
        ]}
        aria-current={isBonsaiPage ? 'page' : undefined}
      >
        盆栽一覧
      </a>
      {user && !isLandingPage && (
        <a
          href="/bonsai/new"
          class="flex items-center gap-2 py-4 text-base font-medium text-primary transition-colors hover:text-primary/80"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-5 w-5"
            aria-hidden="true"
          >
            <path d="M5 12h14" />
            <path d="M12 5v14" />
          </svg>
          盆栽を登録
        </a>
      )}
      {!user && (
        <a
          href="/login"
          class="block py-4 text-base font-medium text-[color:var(--color-muted-foreground-accessible)] transition-colors hover:text-foreground"
        >
          ログイン
        </a>
      )}
    </nav>
  </div>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    if (!button || !menu) return;
    const isCurrentlyHidden = menu.classList.contains('hidden');
    menu.classList.toggle('hidden');
    const isOpen = isCurrentlyHidden;
    button.setAttribute('aria-expanded', String(isOpen));
    menu.setAttribute('aria-hidden', String(!isOpen));
    button.setAttribute('aria-label', isOpen ? 'メニューを閉じる' : 'メニューを開く');
  });

  document.addEventListener('keydown', (e) => {
    if (!button || !menu) return;
    if (e.key === 'Escape' && !menu.classList.contains('hidden')) {
      menu.classList.add('hidden');
      button.setAttribute('aria-expanded', 'false');
      menu.setAttribute('aria-hidden', 'true');
      button.setAttribute('aria-label', 'メニューを開く');
      button.focus();
    }
  });
</script>
