---
/**
 * Admin Login Page
 *
 * Separate login page for admin users.
 * Uses email/password authentication instead of OAuth.
 */

import BaseLayout from "@/layouts/BaseLayout.astro";
import { AdminLoginForm } from "@/components/admin/AdminLoginForm";
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/ui/card";

// Get return URL from query params
const returnTo = Astro.url.searchParams.get("returnTo") || "/manage";
---

<BaseLayout title="管理者ログイン" description="Bonsai-Cho 管理画面ログイン">
  <main id="main-content" class="min-h-screen flex items-center justify-center px-4 py-12 bg-background">
    <Card className="w-full max-w-md">
      <CardHeader className="text-center">
        <div class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-primary/10 text-primary">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="h-6 w-6"
          >
            <rect width="18" height="11" x="3" y="11" rx="2" ry="2" />
            <path d="M7 11V7a5 5 0 0 1 10 0v4" />
          </svg>
        </div>
        <CardTitle className="text-2xl font-serif">管理者ログイン</CardTitle>
        <CardDescription>
          管理画面にアクセスするには、管理者アカウントでログインしてください
        </CardDescription>
      </CardHeader>
      <CardContent>
        <AdminLoginForm client:load returnTo={returnTo} />
        <p class="mt-6 text-center text-xs text-muted-foreground">
          このページは管理者専用です。<br />
          一般ユーザーの方は<a href="/login" class="underline underline-offset-4 hover:text-primary">こちら</a>からログインしてください。
        </p>
      </CardContent>
    </Card>
  </main>
</BaseLayout>
