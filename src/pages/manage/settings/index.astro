---
/**
 * Settings Management Page
 *
 * Admin page for managing system settings and viewing audit logs.
 */
import AdminLayout from "@/layouts/AdminLayout.astro";
import { SettingsPage } from "@/components/admin/SettingsPage";
import { getAdminAuthData } from "@/lib/auth/server";

// Get admin auth data for CSRF token
const { csrfToken } = await getAdminAuthData(Astro);
---

<AdminLayout title="設定 | 管理画面">
  <SettingsPage client:load csrfToken={csrfToken} />
</AdminLayout>
